= simple_form_for(@auto_wash) do |f|
  - if @auto_wash.errors.any?
    #error_explanation
      %h2
        = pluralize(@auto_wash.errors.count, "error")
        prohibited this auto_wash from being saved:
      %ul
        - @auto_wash.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :location
    .row
      .col-sm-6
        = f.text_field :location, class: "form-control"
  .form-group
    = f.label :postal_code
    .row
      .col-sm-6
        = f.text_field :postal_code, class: "form-control"
  .form-group
    = f.label :start
    .row
      .col-sm-6
        = f.text_field :start, class: "form-control"
  .form-group
    = f.label :start
    .row
      .col-sm-6
        = f.text_field :close, class: "form-control"
  .actions
    = f.submit


:javascript
  $(function () {
    $('#auto_wash_start').timepicker();
    $('#auto_wash_close').timepicker();
  });
  