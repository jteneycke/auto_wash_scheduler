= simple_form_for(@auto_wash) do |f|
  - if @auto_wash.errors.any?
    #error_explanation
      %h2
        = pluralize(@auto_wash.errors.count, "error")
        prohibited this auto_wash from being saved:
      %ul
        - @auto_wash.errors.full_messages.each do |message|
          %li= message
  .field
    = f.input :location
  .field
    = f.input :start, as: :time
  .field
    = f.input :close, as: :time
  .actions
    = f.submit


:javascript
  $(function () {
    $('#auto_wash_start').datetimepicker();
    $('#auto_wash_close').datetimepicker();
  });
